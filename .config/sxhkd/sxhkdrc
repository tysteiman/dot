# -*- mode: conf-space -*-

# terminal emulator
super + Return
        kitty fish

# program launcher
super + d
	rofi -show drun -font "JetBrainsMono Nerd Font 12" -show-icons
super + shift + d
	rofi -show run -font "JetBrainsMono Nerd Font 12"

# text editor (emacs)
super + shift + m
	emacsclient -c -a emacs

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# sound
super + shift + p
      pavucontrol

# files
super + shift + f
      pcmanfm

super + shift + s
      flameshot gui

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill window
# super + {_,shift + }x
super + shift + x
	bspc node -c

# full screen
super + f
      bspc node -t {fullscreen,tiled}

# focus the node in the given direction
super + {_,shift + }{j,k,l,semicolon}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
super + ctrl + {j,k,l,semicolon}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# expand a window
super + alt + {j,k,l,semicolon}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window
super + alt + ctrl + {j,k,l,semicolon}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
